<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.craft"
		name="Minecraft"
		version="1.0.0"
		provider-name="Libretro">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
                   library_android="libgame.libretro.craft.so"
                   library_linux="game.libretro.craft.so"
                   library_osx="game.libretro.craft.dylib"
                   library_windx="game.libretro.craft.dll"
                   library_wingl="game.libretro.craft.dll">
		<platforms></platforms>
		<extensions></extensions>
		<supports_game_loop>true</supports_game_loop>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>true</supports_standalone>
		<supports_keyboard>false</supports_keyboard>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Minecraft Clone</summary>
		<description>A simple Minecraft clone written in C using modern OpenGL (shaders).</description>
		<platform>all</platform>
		<nofanart>true</nofanart>
	</extension>
</addon>
