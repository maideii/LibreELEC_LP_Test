<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="repository.retroplayer.libreelec.tv"
                name="LibreELEC Retroplayer Add-ons"
                version="9.0.0"
                provider-name="Team LibreELEC">
        <extension point="xbmc.addon.repository"
                name="LibreELEC.tv Retroplayer Add-on Repository">
                <info>@ADDON_URL@/addons.xml</info>
                <checksum>@ADDON_URL@/addons.xml.md5</checksum>
                <datadir zip="true">@ADDON_URL@/</datadir>
        </extension>
        <extension point="xbmc.addon.metadata">
                <summary>Retroplayer add-on repository for LibreELEC</summary>
                <description>Retroplayer binary add-ons for use with LibreELEC</description>
                <platform>all</platform>
        </extension>
</addon>
